<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="SqlProgram.ui.generateSqlFile"
            name="GenerateSQLFile">
      </command>
      <command
            id="SqlProgram.ui.validateSqlScript"
            name="ValidateSqlScript">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="sqlProgram.ui.GenerateSqlFileHandler"
            commandId="SqlProgram.ui.generateSqlFile">
      </handler>
      <handler
            class="sqlProgram.ui.ValidateSqlScriptHandler"
            commandId="SqlProgram.ui.validateSqlScript">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="TP - M1 Software Engineering">
            <command
                  commandId="SqlProgram.ui.generateSqlFile"
                  label="Generate script SQL"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <adapt
                              type="sqlProgram.SqlProgram">
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="SqlProgram.ui.validateSqlScript"
                  label="Validate"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <adapt
                              type="sqlProgram.SqlProgram">
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
